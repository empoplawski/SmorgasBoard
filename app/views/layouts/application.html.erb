<!DOCTYPE html>
<html>
  <head>
    <title>SmorgasBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <%= link_to "Home", root_path %>
      <% if current_user %>
      <!-- Remember to add a path here to user profile page. -->
        <%= render './logged_in_links' %>
      <% else %>
        <%= render './logged_out_links' %>
      <% end %>
      <div class="box" id="friends-info">Put friends info here if logged in. Else, default to something else...</div>
    </nav>

    <%= yield %>
  </body>
</html>
