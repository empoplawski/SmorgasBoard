<!DOCTYPE html>
<html>
  <head>
    <title>SmorgasBoard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <%= link_to "Home", root_path %>
      <% if current_user %>
      <!-- Remember to add a path here to user profile page. -->
        <%= link_to "Sup, #{@current_user.username}?" %>
        <%= link_to "Logout", logout_path %>
      <% else %>
        <%= link_to "Login", login_path %>
        <%= link_to "Register", register_path %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
